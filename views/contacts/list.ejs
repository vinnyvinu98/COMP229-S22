<%- include ../partials/header.ejs %>

<!-- Content for the Contat List page -->

<main class="container">
    <div class="row">
        <h1><%= title %></h1>

        <br>

        <div class="table-responsive">
            <table class="table table-bordered table-striped table-hover">
                <!-- Header Row-->
                <tr>
                    <th class="text-center">Name</th>
                    <th class="text-center">Address</th>
                    <th class="text-center">Email</th>
                    
                </tr>

                <!-- Repeatable Template Row -->
                <% for(let i = 0; i < ContactsList.length; i++) { %>
                    <tr>
                        <td class="text-center"><%= ContactsList[i].name %></td>
                        <td class="text-center"><%= ContactsList[i].address %></td>
                        <td class="text-center"><%= ContactsList[i].email %></td>
                        <td class="text-center">
                            <a href="/contacts/edit/<%= ContactsList[i]._id %>" class="btn btn-primary btn-sm">
                            <i class="fas fa-pencil-alt"></i></a>
                        </td>
                        <td class="text-center">
                            <a href="/contacts/delete/<%= ContactsList[i]._id %>" class="btn btn-danger btn-sm">
                            <i class="fas fa-trash-alt"></i></a>
                        </td>
                        
                    </tr>
                <% } %>
            
            </table>
        </div>
    </div>
  </main>

<%- include ../partials/footer.ejs %>